<div class="content">
<% @works.each do |work| %>
<section class="grid">
  <p><%= image_tag(work.image, :class => 'thumb') %></p>
  <p><%= link_to(work.artist.name, work.artist) if work.artist %></p>
  <p><%= work.title %></p>
<p><%= link_to('Edit', edit_work_path(work)) %> | <%= link_to('Delete', work, :data =>{:confirm=>'Are you sure you want to do delete this work?',:method => :delete }) %></p>
</section>
<% end %>
<span class="stretch"></span>
</div>
